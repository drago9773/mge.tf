<div class="w-full bg-opacity-90 backdrop-blur-lg h-full flex flex-col justify-center align-middle">
  <div class="flex flex-col align-middle justify-center w-full items-center">
    <div class="md:w-1/2 flex flex-col justify-center align-middle">
      <ul id="users_container">
        <% if (user && userIsMod) { %>
        <form action="/tournaments" method="POST" class="mb-8 space-y-4 w-full text-black">
          <div class="text-black">
            <label for="name" class="block text-sm font-medium text-black">Tournament Name</label>
            <input 
              type="text" 
              name="name" 
              id="name" 
              required
              class="mt-1 block w-full rounded-md border-zinc-700 bg-zinc-800/50 text-black shadow-sm focus:border-cyan-500 focus:ring-cyan-500"
            >
          </div>
          <div>
            <label for="description" class="block text-sm font-medium text-zinc-100">Description</label>
            <textarea
              name="description"
              id="description"
              rows="3"
              class="mt-1 block w-full rounded-md border-zinc-700 bg-zinc-800/50 text-black shadow-sm focus:border-cyan-500 focus:ring-cyan-500"
            ></textarea>
          </div>
          <div>
            <label for="bracket_link" class="block text-sm font-medium text-zinc-100">Bracket URL</label>
            <input
              type="url"
              name="bracket_link"
              id="bracket_link"
              class="mt-1 block w-full rounded-md border-zinc-700 bg-zinc-800/50 text-black shadow-sm focus:border-cyan-500 focus:ring-cyan-500"
            >
          </div>
          <div>
            <label for="avatar" class="block text-sm font-medium text-zinc-100">Avatar URL</label>
            <input
              type="url" 
              name="avatar"
              id="avatar"
              class="mt-1 block w-full rounded-md border-zinc-700 bg-zinc-800/50 text-black shadow-sm focus:border-cyan-500 focus:ring-cyan-500"
            >
          </div>
          <div>
            <button 
              type="submit"
              class="inline-flex justify-center rounded-md border border-transparent bg-cyan-600 py-2 px-4 text-sm font-medium text-black shadow-sm hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2"
            >
              Create Tournament
            </button>
          </div>
        </form>
        <% } %>
        <% tournaments.forEach((tournament, index)=> { %>
        <li id="card-<%= index %>" class="relative z-0 group overflow-hidden h-40 border border-zinc-800 rounded-xl bg-[radial-gradient(500px_circle_at_var(--cursor-x)_var(--cursor-y),#22d3ee_0,transparent,transparent_70%)]">
          <div class="space-y-3 relative z-10 p-5 bg-[linear-gradient(180deg,_rgba(24,_24,_27,_0.60)_0%,_rgba(24,_24,_27,_0.00)_100%)]">
            <div class="flex justify-between items-center">
              <h3 id="tournaments_name" class="text-zinc-100 font-semibold">
                <%= tournament.name %>
              </h3>
              <% if (user && userIsMod) { %>
                <form action="/tournaments/<%= tournament.id %>" method="POST" class="inline">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="text-blue-400 hover:text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </form>
              <% } %>
            </div>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>
</div>