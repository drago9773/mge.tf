<div class="main-overlay">
    <h1 class="mge-title">Rewriting MGE</h1>
    <div class="placeholder">
        <link rel="stylesheet" href="css/main.css" />
        <table>
            <tr class="elo-title">
                <th>Rank</th>
                <th>Name</th>
                <th>Elo</th>
                <th>Wins</th>
                <th>Losses</th>
            </tr>
            <% elo.forEach((player, index) => { %>
                <tr style="cursor:pointer" hx-target="#main" hx-get=<%= "/player_page/" + player.steamid + "?name=" + player.name %> class="elo-row">
                    <td><%= index + 1 %></td>
                    <td class="name-column"><%= player.name %></a></td>
                    <td><%= player.rating %></td>
                    <td><%= player.wins %></td>
                    <td><%= player.losses %></td>
                </tr>
            <% }) %>
        </table>
    </div>
        <div class="main-menu">
        <div class="main-menu-buttons">
            <a class="main-menu-button main-1" hx-get="/users" hx-target="#main" hx-swap="innerHtml">Users</a>
            <a class="main-menu-button main-2" hx-get="/load?page=league" hx-target="#main" hx-swap="innerHtml">Money Match</a>
            <a class="main-menu-button main-3" hx-get="/load?page=league" hx-target="#main" hx-swap="innerHtml">League</a>
            <a class="main-menu-button main-4" hx-get="/forums" hx-swap="innerHtml" hx-target="#main">Forums</a>
        </div>
    </div>
    <div class="main-connect-info">Official TF2 MGE Server: 'connect mge.tf'
    </div>
    <div class="main-discord-info">Official TF2 MGE Discord: 'discord.gg/mge'
    </div>

    <div id="announcement-overlay" class="announcement-overlay">
        <div class="overlay-content">
            <button class="announcement-button" id="closeOverlay">Close</button>
            <h1>Check out the discord!</h1>
            <p>We post updates about upcoming tournaments and it's a
                great way to connect with other MGE players!
            </p>
            <a class="join-discord" id="discordInvite" href="https://discord.gg/j6kDYSpYbs">discord.gg</a>
      </div>
    </div>

</div>