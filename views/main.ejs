<div class="main-overlay">
  <div class="flex align-middle justify-center items-center">
    <img class="h-12 w-12 md:h-32 md:w-32 object-contain" src="images/mge_transparent_logo.png">
    <h1 class="text-center md:text-6xl font-bold text-white gap-5 text-shadow shadow-black">REWRITING MGE
    </h1>
  </div>
  <div class="flex flex-col gap-1 mb-2">
    <div class="w-full">
      <input class="focus:border-white focus:border w-full rounded p-2 bg-black bg-opacity-50 backdrop-blur-lg backdrop-filter" type="text" id="eloSearch" placeholder="Search by username...">
    </div>
    <div class="scrollbar-thin scrollbar-dark max-h-[420px] bg-opacity-55 backdrop-blur-lg backdrop-filter bg-black shadow-sm border rounded-lg overflow-x-auto overflow-y-scroll h-[75vh]">
      <table class="mb-2 w-full table-fixed text-sm text-left">
        <thead class="bg-gray-600 text-gray-50 font-medium border-b">
          <tr>
            <th class="w-10 py-3 px-6">Rank</th>
            <th class="overflow-x-auto max-w-[40px] py-3 px-6">Name</th>
            <th class="py-3 px-6">Elo</th>
            <th class="py-3 px-6">Wins</th>
            <th class="py-3 px-6">Losses</th>
          </tr>
        </thead>
        <tbody id="eloTableBody" class="text-gray-50 divide-y">
          <% elo.forEach((player, index) => { %>
          <tr style="cursor:pointer">
            <td class="px-6 py-4 whitespace-nowrap">
              <a href="/player_page/<%= player.steamid %>" style="display:block; color: inherit; text-decoration: none;">
                <%= index + 1 %>
              </a>
            </td>
            <td class="overflow-x-auto px-6 py-4 break-words">
              <a href="/player_page/<%= player.steamid %>" style="display:block; color: inherit; text-decoration: none;">
                <%= player.name %>
              </a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <a href="/player_page/<%= player.steamid %>" style="display:block; color: inherit; text-decoration: none;">
                <%= player.rating %>
              </a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <a href="/player_page/<%= player.steamid %>" style="display:block; color: inherit; text-decoration: none;">
                <%= player.wins %>
              </a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <a href="/player_page/<%= player.steamid %>" style="display:block; color: inherit; text-decoration: none;">
                <%= player.losses %>
              </a>
            </td>
            <td class="hidden">
              <a href="/player_page/<%= player.steamid %>" style="display:block; color: inherit; text-decoration: none;">
                <%= player.steamid %>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <script src="/js/main.js"></script>
</div>