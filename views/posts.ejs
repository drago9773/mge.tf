<div class="post">
    <link rel="stylesheet" href="css/post.css" />
    <div class="background-page"></div>

    <title>Thread</title>

    <div class="post-background">
        <div class="post-header">
            <button class="post-return-button" hx-get="/forums" hx-target="#main">Threads</button>
            <div class="post-container">
                <a class="post-title"><%= thread.title %></a>
                <div class="post-profile-container" hx-get="/player_page/<%= thread.steam_id %>" hx-target="#main" hx-swap="innerHtml">
                    <img class="post-avatar" src="<%= thread.steam_avatar %>" alt="Post Avatar">
                    <a class="post-username"><%= thread.steam_username %></a>
                </div>
                <p class="post-content"><%= thread.content %></p>
                <p class="post-id"><%= thread.forums_id %></p>
            </div>
        </div>
        <% posts.forEach(post => { %>
            <div class="reply-container">
                <div class="reply-profile-container" hx-get="/player_page/<%= post.steam_id %>" hx-target="#main" hx-swap="innerHtml">
                    <img class="reply-avatar" src="<%= post.steam_avatar %>" alt="Post Avatar">
                    <a class="reply-username"><%= post.steam_username %></a>
                </div>
                <p class="reply-content"><%= post.content %></p>
            </div>
        <% }); %>
        <form class="reply-textbox" hx-post="/posts" hx-target="#main">
            <input type="hidden" name="thread_id" value="<%= thread.thread_id %>">
            <textarea id="content" name="content" rows="10" cols="60"></textarea><br><br>
            <button class="post-reply" type="submit">Post Reply</button>
        </form>
    </div>
</div>
