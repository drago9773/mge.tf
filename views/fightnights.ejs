<div class="bg-black backdrop-blur-xl bg-opacity-90 px-6 py-32 lg:px-8">
  <div class="mx-auto max-w-7xl text-base leading-7 text-white">
    <h2 class="text-3xl font-bold tracking-tight sm:text-4xl mb-8">Fight Nights</h2>
    
    <% if (session.user?.permissionLevel >= 2) { %>
      <a href="/create_fightnight" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 mb-8">Create New Fight Night</a>
    <% } %>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <% fightNights.forEach(function(fn) { %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-xl">
          <% if (fn.card) { %>
            <img src="<%= fn.card %>" class="w-full h-48 object-cover" alt="Fight Night Card">
          <% } %>
          <div class="p-6">
            <p class="text-gray-300 mb-4"><%= fn.description %></p>
            <a href="/fightnight/<%= fn.id %>" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">View Details</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>
