<div class="rounded-b-md p-2 bg-black bg-opacity-50 align-middle items-center flex w-full justify-between">
  <!-- Logo and dropdown trigger -->
  <div class="relative z-10">
    <!-- SVG icon or trigger -->
    <div id="dropdown-trigger" class="h-full cursor-pointer">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 cursor-pointer">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
      </svg>
    </div>

    <!-- Dropdown content -->
    <div id="dropdown-content" class="hidden absolute top-full left-0 mt-2 w-48 bg-black bg-opacity-80 shadow-lg rounded-lg py-2">
      <a href="/" class="block px-4 py-2 text-white hover:bg-gray-800">Home</a>
      <a href="/users" class="block px-4 py-2 text-white hover:bg-gray-800">Users</a>
      <a href="/forums" class="block px-4 py-2 text-white hover:bg-gray-800">Forums</a>
      <a href="/league" class="block px-4 py-2 text-white hover:bg-gray-800">League</a>
      <a href="/signup" class="block px-4 py-2 text-white hover:bg-gray-800">Sign Up</a>
      <!-- Add more links as needed -->
    </div>
  </div>

  <%# TODO: Make connection links less hideous %>
  <div class="flex gap-2 align-middle items-center">
    <div id="copy-server-id" class="flex cursor-pointer select-none align-middle">
      <span>connect mge.tf</span>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75" />
      </svg>
    </div>
    <div class="flex items-center align-middle">
      <a href="steam://connect/45.76.26.238:27015" class="p-0.5 bg-green-600 border border-green-800 rounded-md">
        <div class="flex items-center align-middle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
          </svg>
          connect
        </div>
      </a>
    </div>
  </div>
  <div class="">
    <a id="discordInvite" href="https://discord.gg/j6kDYSpYbs">
      <img class="h-7 w-7" src="/images/discord-mark-white.svg" alt="Discord Logo" />
    </a>
  </div>
  <div class="signin-section">
    <% if (!session.user) { %>
    <a class="signin-button" href="/init-openid">
      <img class="w-40 rounded-md" src="../images/signin-thru-steam.png" alt="Steam Logo" />
    </a>
    <% } else { %>
    <div class="flex flex-row-reverse gap-2 align-middle items-center">
      <a class="profile-container" href="/player_page/<%= session.user.steamid %>">
        <img class="profile-pic" src="<%= session.user.avatar.small %>" alt="Avatar" />
        <% const maxLength=15; let displayName=session.user.username; if (displayName.length> maxLength) {
              displayName = displayName.slice(0,
              maxLength) + '...'; } %>
      </a>
      <span class="logged-in-username">
        <%= displayName %>
      </span>
    </div>
    <% } %>
  </div>
  <script src="/js/sidebar.js"></script>
</div>