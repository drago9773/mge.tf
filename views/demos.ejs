<div class="w-full bg-black bg-opacity-50 backdrop-blur-lg h-full flex flex-col justify-center items-center">
  <div class="container mx-auto p-4 flex flex-col align-middle justify-center w-full items-center">

    <div class="bg-gray-900 p-6 rounded-lg shadow-lg mb-8 w-full max-w-3xl">
      <h1 class="text-3xl font-bold text-white mb-4 text-center">
        Demo of 
        <a href="/player_page/<%= player.steamId %>" class="text-blue-500 hover:text-blue-700 hover:underline">
          <%= player.steamUsername || 'Unknown Player' %>
        </a>
      </h1>
      <p class="text-lg text-gray-300 mb-2"><strong>Submitted By:</strong> 
        <a href="/player_page/<%= submittedBy?.steamId || 'unknown' %>" class="text-blue-500 hover:text-blue-700 hover:underline">
          <%= submittedBy?.steamUsername || 'Unknown' %>
        </a>
      </p>
      <p class="text-lg text-gray-300 mb-2"><strong>Match:</strong>
        <% if (match) { %>
          <a href="/match_page/<%= match.matchId %>" class="text-blue-500 hover:text-blue-700 hover:underline">
            Season <%= match.seasonNo %>, Week <%= match.weekNo %>, 
            <%= homeTeamName.name %> vs <%= awayTeamName.name %>
          </a>
        <% } else { %>
          No match associated
        <% } %>
      </p>     
      <p class="text-lg text-gray-300 mb-2"><strong>Description:</strong> <%= demo.description || 'No description provided.' %></p>
      <p class="text-lg text-gray-300 mb-4"><strong>Submitted At:</strong> 
        <%= new Date(demo.submittedAt).toLocaleDateString('en-US') %>
      </p>
      <a href="/demos/<%= demo.id %>/download" class="w-full">
        <button class="bg-blue-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-600 w-full">Download Demo</button>
      </a>
    </div>
    
    <div class="bg-gray-900 p-6 rounded-lg shadow-lg w-full max-w-3xl">
      <h2 class="text-2xl font-bold text-white mb-4">Submit a Report</h2>
      <form method="POST" action="/demos/<%= demo.id %>/submit_report" class="space-y-4">
        <div class="space-y-2">
          <label for="description" class="text-white text-sm font-medium">Report Description:</label>
          <textarea id="description" name="description" class="bg-gray-800 text-white p-4 rounded-lg w-full border border-gray-700 focus:ring-2 focus:ring-yellow-500" required></textarea>
        </div>
        <button type="submit" class="bg-red-500 text-white py-2 px-6 rounded-lg font-semibold hover:bg-red-600">Submit Report</button>
      </form>
    </div>

  </div>
</div>
